// 添加边框阴影效果
.post {
   margin-top: 0px;
   margin-bottom: 60px;
   padding: 25px;
   -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
   -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}

// 修改文章间分割线
.posts-expand {
  .post-eof {
    display: block;
    width: 0%;
    height: 0px;
    background: $grey-light;
    text-align: center;
  }
}

